@model Team18App.Models.department

@{
    ViewBag.Title = "Details";
    bool isAdmin = false;
    bool isDhead = false;
    bool isEmployee = false;
    if (User.Identity.Name.Contains("AdminUser"))
    {
        isAdmin = true;
        isDhead = true;
        isEmployee = true;
    }
    if (User.Identity.Name.Contains("DepartmentHead"))
    {
        isDhead = true;
        isEmployee = true;
    }
    if (User.Identity.Name.Contains("Employee"))
    {
        isEmployee = true;
    }
}

<h2>Details</h2>
@if (isDhead) {
<div>
    <h4>department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.dept_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dept_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.employee.Fname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.employee.Fname)
        </dd>

    </dl>
</div>

}
else {
<h2>Insufficient Viewing Privileges</h2>
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DEPT_NUM }) |
    @Html.ActionLink("Back to List", "Index")
</p>