@model IEnumerable<Team18App.Models.getTopEmployees_Result>

@{
    ViewBag.Title = "getTopEmployees";
    bool isAdmin = false;
    bool isDhead = false;
    bool isEmployee = false;
    if (User.Identity.Name.Contains("AdminUser"))
    {
        isAdmin = true;
        isDhead = true;
        isEmployee = true;
    }
    if (User.Identity.Name.Contains("DepartmentHead"))
    {
        isDhead = true;
        isEmployee = true;
    }
    if (User.Identity.Name.Contains("Employee"))
    {
        isEmployee = true;
    }
}

<h2>Top Employees Report</h2>

<style type="text/css">
    th {
        padding: 0 20px;
    }
    td{
        padding: 0 20px;
    }
</style>
<table>
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SSN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weekly_Pay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours_worked)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weekly_Pay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours_worked)
            </td>

        </tr>

    }

</table>  